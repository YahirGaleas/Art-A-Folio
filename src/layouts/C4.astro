---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Form from "../components/Form.astro";
import Image from "../../public/Images/Yahir Galeas 202021001437 Concurso Artistico de Fisica2.png";
import "../Styles/Jump.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Handjet:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{Astro.props.title}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-gradient-to-tr from-pink-200 via-purple-200 to-blue-200">
    <Header />
    
    <div class="h-16 bg-transparent"></div>

    <div class="flex-grow flex flex-col md:flex-row items-center justify-center px-4 py-16 sm:px-6 lg:px-8">
      <div class="w-full md:w-1/2 max-w-md mx-auto mb-8 md:mb-0">
        <Form class="drop-shadow" />
      </div>
      <div class="w-full md:w-1/2 md:ml-8">
        <img src={Image.src} alt="Your Image" class="image-container rounded-lg shadow-lg object-cover w-full h-auto" />
      </div>
    </div>

    <Footer class="w-full mt-auto" />
  </body>
</html>
