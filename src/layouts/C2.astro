---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Img1 from "../../public/Images/Mira na mas directo para twitter.png";
import "../Styles/TextStyleAbout.css"
import "../Styles/Rainbow.css"
import "../Styles/Buttons.css"

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Handjet:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="relative bg-gradient-to-b from-indigo-950 via-slate-400 to-indigo-950">
    <Header />
    <!-- Espacio para separar el contenido del navbar -->
    <div class="h-28 dark:bg-indigo-950"></div>

    <div class="flex flex-col items-center justify-center min-h-screen w-full dark:bg-indigo-950">
      <div class="float-up bg-slate-400 rounded-3xl container mx-auto px-8 py-8 flex items-center justify-center">
        <!-- Imagen -->
        <div class="flex-shrink-0 h-full w-1/2 relative">
          <img src={Img1.src} alt="Art by Yex" class="rounded-3xl h-full object-cover" />
          <div class="absolute bottom-0 left-0 right-0 rounded-3xl bg-gray-800 bg-opacity-75 text-white py-2 px-4">
            <p class="text-center">ART BY YEX</p>
          </div>
        </div>
        <!-- Texto grande y texto pequeño con divisores en columnas -->
        <div class="flex-shrink-0 w-1/2 px-8">
          <h1 class="text-center text-5xl font-bold text-white mb-4 rainbow-text">Where Style Meets Comfort!</h1>
          <!-- Primer divisor -->
          <div class="border-b border-slate-900 mb-4"></div>
          <!-- Texto pequeño en columnas -->
          <div class="grid grid-cols-2 gap-4 text-white">
            <div class="font-bold text-black text-center text-small">
              Discover the most promising emerging artists and immerse yourself in a dynamic and ever-evolving art gallery. Our homepage features the most popular artworks and personalized recommendations based on your interests.
            </div>
            <div class="font-bold text-black text-center text-small">
              Create and personalize your profile to showcase your best works, share your story, and connect with your audience. Each profile is a window into the artist's creative world, where you can interact, receive feedback, and gain followers.
            </div>
          </div>
        </div>
      </div>
      <!-- Divisor para mantener el footer en la parte inferior -->
      <div class="mt-auto w-full">
        <Footer />
      </div>
    </div>
  </body>
</html>
