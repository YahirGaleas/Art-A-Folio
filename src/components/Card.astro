---
import "../Styles/Rainbow.css"
import "../Styles/Buttons.css"
export interface Props {
  title: string;
  text: string;
}

const { title } = Astro.props;
const { text } = Astro.props;
---



<div class="float-up relative z-40 rounded-lg bg-teal-100 opacity p-4 shadow-sm transition hover:shadow-lg sm:p-6 max-w-screen-md mx-auto">
    <!-- Título -->
    <h3 class="rainbow-text text-8xl font-bold text-center text-white mb-4">{title}</h3>
    <!-- Línea divisoria -->
    <div class="border-b border-slate-900 mb-4"></div>
    <!-- Contenido -->
    <p class=" font-bold text-center text-xl text-slate-900 mb-4">
        {text}
    </p>
</div>